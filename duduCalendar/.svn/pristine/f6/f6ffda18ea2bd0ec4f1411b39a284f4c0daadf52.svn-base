@charset "UTF-8";

body {
   scrollbar-face-color: #F6F6F6;
   scrollbar-highlight-color: #bbbbbb;
   scrollbar-3dlight-color: #FFFFFF;
   scrollbar-shadow-color: #bbbbbb;
   scrollbar-darkshadow-color: #FFFFFF;
   scrollbar-track-color: #FFFFFF;
   scrollbar-arrow-color: #bbbbbb;
   margin-left: "0px";
   margin-right: "0px";
   margin-top: "0px";
   margin-bottom: "0px";
   display: flex;
   justify-content: center;
   height: 100vh;
   align-items: center;
   font-family: 'thejamsil';
}

.listtable {
   font-size: 30px;
   text-align: center;
   width: 1400px;
   border-collapse: collapse;
}

.listtable tr {
   font-size: 30px;
   border-bottom: 1px solid black !important;
   text-align: center;
}

.listtable td {
   font-size: 20px;
   text-align: center;
   font-weight: 300;
   padding: 10px 0;
}

form {
   display: flex;
   height:100%;
}

.pjfrom {
   background-color: #FFFFFF;
   width: 500px;
   border-radius: 10px;
}

input[type=text] {
   border: 1px solid black;
}

.modal {
   position: absolute;
   display: none;
   justify-content: center;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   background-color: rgba(0, 0, 0, 0.4);
   z-index: 10;
	font-family:"thejamsil";
}

.modal_body {
   position: absolute;
   top: 50%;
   left: 50%;
   width: 550px;
   height: 600px;
   padding: 40px;
   text-align: center;
   border-radius: 10px;
   transform: translateX(-50%) translateY(-50%);
}

.maindiv {
    width: 85%;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    position: absolute;
    top: 50%;
    left: 50%;
    translate: -50% -60%;
    height: 467px;
}

.title {
   font-size: 25px;
   position: relative;
   top: 0;
   width: 0;
   margin-bottom: 11px;
   border-bottom: 1px solid gray;
   padding: 10px;
}

.back {
   position: absolute;
   top: 30px;
   left: 30px;
   background-color: unset;
   border: unset;
   color: #b5b5b5;
   cursor: pointer;
}

.pdate {
    width: 231px;
    display: flex;
    justify-content: center;
}
.blueborder {
    border-top: 2px solid #0f317f;
    background-color: #f1f1f1;
}
.pno {
    width: 5%;
    font-size: 14px;
}
.header {
    font-size: 15px;
