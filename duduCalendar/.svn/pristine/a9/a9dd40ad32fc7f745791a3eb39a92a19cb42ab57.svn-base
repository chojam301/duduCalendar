@charset "UTF-8";
body {
	font-family: 'thejamsil';
	padding: 70px;
}

.listdiv {
	display: flex;
	font-weight: 300;
	font-size: 15px;
	padding: 0 15px;
	border-radius: 5px;
	margin-bottom: 5px;
	border: 1px solid #e5e5e5;
	height: 60px;
	align-items: center;
}

.listdiv:hover {
	background-color: #f3f3f3;
	cursor: pointer;
}

.projectList .listdiv:first-child {
	border-top: 1px solid gray;
}

.projectList {
	padding-bottom: 60px;
}

.pjlistTitle, .dalistTitle {
	margin-bottom: 20px;
	color: #3f3f3f;
	padding: 10px;
	border-radius: 5px;
	width: 60px;
	border: 1px solid #cbcbcb;
}

.color {
	width: 3px;
	height: 65%;
	border-radius: 5px;
	margin: 0 15px;
}

.date {
	font-size: 13px;
}

.content {
    font-size: 12px;
    background-color: #ebebeb;
    padding: 10px;
    border-radius: 5px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 700px;
}

.title {
	width: 350px;
	overflow: hidden;
}

.dailytitle {
	width: 310px;
}

.back {
	position: absolute;
	top: 30px;
	left: 30px;
	background-color: unset;
	border: unset;
	color: #b5b5b5;
	cursor: pointer;
}

/* pjlist */
.pjfrom {
	background-color: #FFFFFF;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 350px;
	flex-direction: column;
	height: 100%;
	font-size: 14px;
}

.pjinput {
	width: 90%;
	padding: 12px 15px;
	border: none;
	margin: 8px 0;
	background-color: #eee;
	overflow: hidden;
}

input[type=text] {
	border: none;
}

.modal {
	position: absolute;
	display: none;
	justify-content: center;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.4);
}

.modal_body {
	position: absolute;
	display: flex;
	justify-content: center;
	top: 50%;
	left: 50%;
	width: 400px;
	height: 600px;
	padding: 40px;
	text-align: center;
	background-color: rgb(255, 255, 255);
	border-radius: 10px;
	transform: translateX(-50%) translateY(-50%);
}

.maindiv {
	width: 85%;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	position: absolute;
	top: 100px;
	left: 100px;
}

label {
	display: flex;
	align-items: center;
}