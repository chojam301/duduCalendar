<style>
body {
   scrollbar-face-color: #F6F6F6;
   scrollbar-highlight-color: #bbbbbb;
   scrollbar-3dlight-color: #FFFFFF;
   scrollbar-shadow-color: #bbbbbb;
   scrollbar-darkshadow-color: #FFFFFF;
   scrollbar-track-color: #FFFFFF;
   scrollbar-arrow-color: #bbbbbb;
   margin-left: "0px";
   margin-right: "0px";
   margin-top: "0px";
   margin-bottom: "0px";
   display: flex;
   justify-content: center;
   height: 100vh;
   align-items: center;
   font-family: 'thejamsil';
}

.listtable {
   font-size: 30px;
   text-align: center;
   width: 1400px;
   border-collapse: collapse;
}

.listtable tr {
   font-size: 30px;
   border-bottom: 1px solid black !important;
   text-align: center;
}

.listtable td {
   font-size: 20px;
   text-align: center;
   font-weight: 300;
   padding: 10px 0;
}

form {
   display: flex;
   height:100%;
}

.pjfrom {
   background-color: #FFFFFF;
   width: 500px;
   border-radius: 10px;
}

input[type=text] {
   border: 1px solid black;
}

.modal {
   position: absolute;
   display: none;
   justify-content: center;
   top: 0;
   left: 0;
   width: 100%;
   height: 100%;
   background-color: rgba(0, 0, 0, 0.4);
   z-index: 10;
	font-family:"thejamsil";
}

.modal_body {
   position: absolute;
   top: 50%;
   left: 50%;
   width: 550px;
   height: 600px;
   padding: 40px;
   text-align: center;
   border-radius: 10px;
   transform: translateX(-50%) translateY(-50%);
}

.maindiv {
    width: 85%;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    position: absolute;
    top: 50%;
    left: 50%;
    translate: -50% -60%;
    height: 467px;
}

.title {
   font-size: 25px;
   position: relative;
   top: 0;
   width: 0;
   margin-bottom: 11px;
   border-bottom: 1px solid gray;
   padding: 10px;
}

.back {
   position: absolute;
   top: 30px;
   left: 30px;
   background-color: unset;
   border: unset;
   color: #b5b5b5;
   cursor: pointer;
}

.pdate {
    width: 231px;
    display: flex;
    justify-content: center;
}
.blueborder {
    border-top: 2px solid #0f317f;
    background-color: #f1f1f1;
}
.pno {
    width: 5%;
    font-size: 14px;
}
.header {
    font-size: 15px;
    display: flex;
    justify-content: center;
}

.username{
   width: 10%;
}

	.modaltitle{
		display:flex;
		height: 5%;
		border-bottom: 2px solid #2556a3;
	}
	.modaltitle div{
		display:flex;
		align-items: flex-end;
		padding-left: 20px;
		padding-bottom: 10px;
	}
	.pjinfo{
		display:flex;
		font-size: 9pt;
		padding: 10px 0;
	}
	.pjbody{
		display:flex;
		justify-content: space-around;
		align-items: center;
	}
	.tableborder{
		border-left: 1px solid #a59d9d;
	}
	
	tr{
		border-top: 1px solid #a59d9d;
	}
	
	td{
		text-align:left;
	}
	
	table{
		width:100%;
		padding-top: 10px;
		border-collapse: collapse;
	}
	.pjtitle{
		width:90%;
		padding: 10px;
		margin: 5px;
	}
	.tableborder input{
		padding: 5px;
		margin: 5px;
	}
	
	.pjcnt{
		resize:none;
		overflow: auto;
		width: 90%;
		height: 100px;
		padding: 10px;
		font-family: "thejamsil";
		margin: 5px;
	}
	.pjuser{
		border: 1px solid #a59d9d;
		width: 200px;
		height: 120px;

	}
	
	.userbtn{
		display:flex;
		flex-direction: column;
		justify-content: space-around;
		margin:0 20px;
	}
	
	.userbtn input{
		width: 50px;
		height: 30px;
		font-size: 12pt;
		font-weight:400;
		font-family: "thejamsil";
		color:white;
		background-color: #2a3973;
		border: none;
		translate: 0 -30%;
		border-radius: 5px;
		}
	
	.pjmember{
		display:flex;
		justify-content:center;
		margin: 10px 0;
	}
	.pjfoot{
		display:flex;
		justify-content:center;
	}
	.pjfoot input{
		width: 90px;
		height:40px;
		font-size: 12pt;
		font-weight:400;
		font-family: "thejamsil";
		color:white;
		background-color: #2a3973;
		border: none;
		translate: 0 -30%;
		border-radius: 5px;
	}
	.pjfoot div{
		width: 50%;
		display: flex;
		justify-content:center;
	}
	.divtext{
		padding: 5px;
	}
	select{
		width:100%;
		height:100%;
		text-align:center;
		margin:5px;
	}
</style>
<body>
   <button type="button" onclick="backToCalendar()" class="back">
      <span class="material-symbols-outlined">arrow_back</span>
   </button>
   <div class="maindiv">
      <form>
         <div class="listtable">
            <div class="ptitle"
               style="width: 20%;margin-bottom: 30px;color: #092873;margin-left: 20px;font-size: 25px;">프로젝트
               목록</div>
            <div class="row blueborder">
               <div class="thead">
                  <div class="pno header">번호</div>
                  <div class="ptitle header">제목</div>
                  <div class="username header">팀장</div>
                  <div class="pmem header">팀원</div>
                  <div class="pdate header">일정</div>
               </div>
            </div>
            <div class="tbody">
               <c:forEach items="${result}" var="pjlist">
                  <div class="row" onclick="opendd('${pjlist.pjno}')">
                     <div>
                        <div class="pno"><c:out value='${pjlist.pjno}'/></div>
                        <input type="button" value="<c:out value='${pjlist.pjtitle}'/>" class="ptitle">
                        <c:set var="member_list"
                           value="${fn:split(pjlist.pjmember,',')}" />
                        <c:set var="member_count" value="${fn:length(member_list)}" />
                        <c:set var="member" value="${member_count-1}" />
                         <div class="username">
                           <c:out value="${pjlist.username }"></c:out>
                        </div> 
                        <div class="pmem">
                           <c:choose>
                              <c:when test="${member_count < 2}">
                                 <c:out value="${pjlist.pjmember}" />
                              </c:when>
                              <c:otherwise>
                                 <c:out value="${member_list[0]}외 ${member}명" />
                              </c:otherwise>
                           </c:choose>
                        </div>
                        <div class="pdate">
                           <div class="pstart">
                              <c:out value='${pjlist.pjstart}' />
                           </div>
                           <div>~</div>
                           <div class="pend">
                              <c:out value='${pjlist.pjend}' />
                           </div>
                        </div>
                     </div>
                  </div>
               </c:forEach>
            </div>
         </div>
      </form>
   </div>
   <c:forEach items="${result}" var="modal">
		<div id="pj_${modal.pjno}" class="modal">
