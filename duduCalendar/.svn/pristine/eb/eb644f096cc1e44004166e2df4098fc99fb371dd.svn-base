@charset "UTF-8";

body {
	margin: 0;
	padding: 0 10px;
	font-family: 'thejamsil';
}

.topNav {
	height: 75px;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.btn {
    padding: 10px;
    display: flex;
    flex-direction: row;
    height: 100%;
    box-sizing: border-box;
    align-items: center;
}

.topbutton {
	font-size: 10px;
	color: #60ec8c;
	background-color: transparent;
	border: 1px solid #60ec8c;
	padding: 12px 30px;
	border-radius: 25px;
	font-weight: 400;
	text-transform: capitalize;
	letter-spacing: 0.5px;
	transition: all .3s;
	overflow: hidden;
}

.searchBox input {
    outline: none;
    width: 177px;
    font-size: 12px;
    padding: 6px 10px 6px 35px;
    border: 1px solid #bfbfbf;
    border-radius: 3px;
    font-weight: 300;
}

.searchBox{
	position: relative;
}

svg{
    position: absolute;
    left: 10px;
    top: 50%;
    translate: 0 -50%;
    height: 12px;
    color: gray;
}