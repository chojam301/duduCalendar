@charset "UTF-8";
::-webkit-scrollbar{
	display: none;
}

body {
	font-family: 'thejamsil';
	padding: 70px;
}

form {
	display: flex;
	height: 100%;
}

select, input{
	font-family: 'thejamsil';
}

.back {
	position: absolute;
	top: 30px;
	left: 30px;
	background-color: unset;
	border: unset;
	color: #b5b5b5;
	cursor: pointer;
}

.color {
	width: 3px;
	height: 65%;
	border-radius: 5px;
	margin: 0 15px;
}

.content {
    font-size: 12px;
    background-color: #ebebeb;
    padding: 10px;
    border-radius: 5px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 700px;
}

.dailytitle {
	width: 310px;
}

.date {
    font-size: 14px;
    width: 130px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.listdiv {
	display: flex;
	font-weight: 300;
	font-size: 15px;
	padding: 0 15px;
	border-radius: 5px;
	margin-bottom: 5px;
	border: 1px solid #e5e5e5;
	height: 60px;
	align-items: center;
}

.listdiv:hover {
	background-color: #f3f3f3;
	cursor: pointer;
}

.projectList .listdiv:first-child {
	border-top: 1px solid gray;
}

.projectList {
	padding-bottom: 60px;
}

.pjlistTitle, .dalistTitle {
	margin-bottom: 20px;
	color: #3f3f3f;
	padding: 10px;
	border-radius: 5px;
	width: 60px;
	border: 1px solid #cbcbcb;
}

.title {
	width: 310px;
	overflow: hidden;
}

#deco {
	width: 35px !important;
	height: 38px !important;
	padding: unset;
	-webkit-appearance: none;
	-moz-appearance: none;
	appearance: none;
	background-color: transparent;
	border: none;
	margin-right: 10px;
}

#deco::-webkit-color-swatch {
	border-radius: 30px;
	border: none;
}

/* pjlist */
.pjbody{
	display:flex;
	justify-content: space-around;
	align-items: center;
}

.pjfrom {
    background-color: #FFFFFF;
    width: 500px;
    border-radius: 10px;
}

.pjinfo{
	display:flex;
	font-size: 9pt;
	padding: 10px 0;
}

.pjinput {
	width: 90%;
	padding: 12px 15px;
	border: none;
	margin: 8px 0;
	background-color: #eee;
	overflow: hidden;
}

input[type=text] {
	border:1px solid lightgray;
}

.modal {
	position: absolute;
	display: none;
	justify-content: center;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, 0.4);
	z-index: 10000;
	font-family:"thejamsil";
}

.modal_body {
	position:absolute;
	top:50%;
	left: 50%;
	width: 550px;
	height: 600px;
	text-align: center;
	border-radius: 10px;
	transform: translateX(-50%) translateY(-50%);
}

.modaltitle{
	display:flex;
	height: 5%;
	border-bottom: 2px solid #2556a3;
}

.modaltitle div{
	display:flex;
	align-items: flex-end;
	padding-bottom: 10px;
}

.tableborder{
	border-left: 1px solid #d3d3d3;
}

tr{
	border-top: 1px solid #d3d3d3;
}

td{
	text-align:left;
}

table{
	width:100%;
	padding-top: 10px;
	border-collapse: collapse;
}

.pjtitle{
	width:90%;
	padding: 10px;
	margin: 5px;
}

.tableborder input {
    padding: 5px;
    margin: 5px;
    border: 1px solid lightgrey;
}
	
.pjcnt{
	resize:none;
	overflow: auto;
	width: 90%;
	height: 100px;
	padding: 10px;
	font-family: "thejamsil";
	margin: 5px;
	border: 1px solid lightgray;
}

.pjuser {
    width: 200px;
    height: 120px;
    border: 1px solid lightgray;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
	
.userbtn{
	display:flex;
	flex-direction: column;
	justify-content: space-around;
	margin:0 20px;
}

.userbtn input{
	width: 50px;
	height: 30px;
	font-size: 12pt;
	font-weight:400;
	font-family: "thejamsil";
	color:white;
	background-color: #2a3973;
	border: none;
	border-radius: 5px;
	}

.pjmember{
	display:flex;
	justify-content:center;
	margin: 10px 0;
}

.pjfoot{
	display:flex;
	justify-content:center;
}

.pjfoot input{
	width: 90px;
	height:40px;
	font-size: 12pt;
	font-weight:400;
	font-family: "thejamsil";
	color:white;
	background-color: #2a3973;
	border: none;
	translate: 0 -30%;
	border-radius: 5px;
}

.pjfoot div{
	width: 50%;
	display: flex;
	justify-content:center;
}

select{
	width:100%;
	height:100%;
	text-align:center;
	border: 1px solid lightgray;
}

/* pjlist dksadfla*/
label {
	display: flex;
	align-items: center;
}

a{
	text-decoration:none;
	font-weight: 300;
	font-size: 19px;
	margin-left:5px;
}